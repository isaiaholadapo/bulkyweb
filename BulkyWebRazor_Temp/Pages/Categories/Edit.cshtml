@page
@model BulkyWebRazor_Temp.Pages.Categories.Edit

<form action="" method="post">
    <input type="hidden" asp-for="Category.Id" />

    <div class="row pb-2">
        <h2 class="text-primary">Edit Category</h2>
        <hr>
    </div>
    <div class="mb-3 row">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" id="catName" class="form-control">
        <span class="text-danger" asp-validation-for="Category.Name"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="Category.DisplayOrder">Display Order</label>
        <input asp-for="Category.DisplayOrder" id="displayOrder" class="form-control">
        <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
    </div>
    <div class="row">
        <div class="col-6 ">
            <button type="submit" class="btn-primary btn form-control">Update</button>
        </div>
        <div class="col-6 ">
            <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control"> Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}