@page
@model BulkyWebRazor_Temp.Pages.Categories.Delete

<form action="" method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Delete Category</h2>
        <hr>
    </div>
    @* <div asp-validation-summary="All" class="text-danger"></div> *@
    <div class="mb-3 row">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" disabled id="catName" class="form-control">
    </div>
    <div class="mb-3 row">
        <label asp-for="Category.DisplayOrder">Display Order</label>
        <input asp-for="Category.DisplayOrder" disabled id="displayOrder" class="form-control">
    </div>
    <div class="row">
        <div class="col-6 ">
            <button type="submit" class="btn-danger btn form-control">Delete</button>
        </div>
        <div class="col-6 ">
            <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control"> Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}