@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Category

@{
    ViewBag.Title = "Update Category";
    Layout = "_Layout";
}

<form action="" method="post">
    <div class="row pb-2">
        <h2 class="text-primary">Edit Category</h2>
        <hr>
    </div>
    @* <div asp-validation-summary="All" class="text-danger"></div> *@
    <div class="mb-3 row">
        <label asp-for="Name"></label>
        <input asp-for="Name" id="catName" class="form-control">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3 row">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" id="displayOrder" class="form-control">
        <span class="text-danger" asp-validation-for="DisplayOrder"></span>
    </div>
    <div class="row">
        <div class="col-6 ">
            <button type="submit" class="btn-primary btn form-control">Update</button>
        </div>
        <div class="col-6 ">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}